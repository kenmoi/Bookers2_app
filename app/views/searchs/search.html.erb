<p></p>
  <div class="container">
    <div class="row">
      <h2>Books search for "test"</h2>
      <table class="table">
        <% if @model == '2' %>
            <thead>
              <tr>
                <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @book.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
        <% elsif @model == '1' %>
            <thead>
              <tr>
                <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                <th>Name</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @user.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: '40x40', fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user) %></td>
              </tr>
              <% end %>
            </tbody>
        <% end %>
      </table>
    </div>
  </div>
