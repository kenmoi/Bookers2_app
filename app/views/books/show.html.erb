<p><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul class="aaa">
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @users, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @users.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @users.introduction %></th>
          </tr>
        </tbody>
      </table>
      <br>
      <div class="row">
         <%= link_to "", edit_user_path(@users), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <div><label for="book_title">Title</label></div>
        <%= f.text_field :title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <div><label for="book_body">Opinion</label></div>
        <%= f.text_area :body, class: 'form-control book_body' %>
      </div>
      <div class="form-group"><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
      <% end %>
    </div>




    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@users) do %>
              <%= attachment_image_tag @users, :profile_image, size: '40x40', fallback: "no_image.jpg" %>
              <div><%= @users.name %></div>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book1) do %>
               <%= @book1.title %>
              <% end %>
            </td>
            <td><%= @book1.body %></td>

            <% if @book1.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book1), class: "red", method: :delete do %>
              ♥<%= @book1.favorites.count %>
              <% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@book1), class: "black", method: :post do %>
              ♡<%= @book1.favorites.count %>
              <% end %>
            </td>
            <% end %>
            <td>コメント数:<%= @book1.post_comments.count %></td>

            <% if @book1.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path, class: 'btn btn-sm btn-success edit_book_16950' %></td>
            <td><%= link_to 'Destroy', book_path(@book1), class: 'btn btn-sm btn-danger destroy_book_16950', method: :delete, data:{confirm: "本当に削除しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <table>
        <tr class="comment">
          <% @book1.post_comments.each do |post_comment| %>
          <td>
            <%= attachment_image_tag post_comment.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %>
            <div><%= post_comment.user.name %></div>
          </td>
          <td><%= post_comment.comment %></td>
          <td>
            <% if post_comment.user == current_user %>
              <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="new-comment">
        <%= form_with(model:[@book1, @post_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "col-md-12" %>
          <div><%= f.submit "送信する" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

