<table>
   <% book.post_comments.each do |post_comment| %>
   <tr>
            <td>
              <%= attachment_image_tag post_comment.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %>
              <div><%= post_comment.user.name %></div>
            </td>
            <td><%= post_comment.comment %></td>
            <td>
              <% if post_comment.user == current_user %>
                <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true %>
              <% end %>
            </td>
   </tr>
   <% end %>
</table>